<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Quizzly!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </head>
    <body>


        <nav class="navbar navbar-expand-sm bg-primary navbar-dark">
          <!-- Brand -->
          <a class="navbar-brand" href="{{ path('accueil')}}">QUIZZLY</a>

          <!-- Links -->
          <ul class="navbar-nav">
            <li class="nav-item {% if 'accueil' in app.request.attributes.get('_route') %} active{% endif %}" >
              <a class="nav-link" href="{{ path('accueil')}}">Accueil</a>
            </li>
            {% if app.user %}
              {% if is_granted('ROLE_APPRENANT') or is_granted('ROLE_CORRECTEUR') %}
              <li class="nav-item {% if 'thematiques' in app.request.attributes.get('_route') %} active{% endif %}" >
                <a class="nav-link" href="{{ path('thematique_index')}}">Thématiques</a>

              </li>
              {% endif %}
              {% if is_granted('ROLE_SECRETAIRE') %}
                <li class="nav-item {% if 'utilisateur' in app.request.attributes.get('_route') %} active{% endif %}" >
                    <a class="nav-link" href="{{ path('utilisateur_index')}}">Utilisateurs</a>

                </li>
              {% endif %}
              {% if is_granted('ROLE_ENTRAINEUR') %}
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle {% if 'questionnaire' in app.request.attributes.get('_route') %} active{% endif %}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Mes Questionnaires
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{{ path('questionnaire_list')}}">Voir</a>
                    <a class="dropdown-item" href="{{ path('questionnaire_ajouter',{ 'id': 0 })}}">Nouveau</a>
                  </div>
                </li>
              {% endif %}
              {% if is_granted('ROLE_APPRENANT') %}
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle {% if 'questionnaire' in app.request.attributes.get('_route') %} active{% endif %}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Mes Questionnaires
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{{ path('questionnaire_par_thematique')}}">Voir</a>
                  </div>
                </li>
              {% endif %}
              {% if is_granted('ROLE_CORRECTEUR') %}
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle {% if 'examens' in app.request.attributes.get('_route') %} active{% endif %}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Mes examens à corriger
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{{ path('examens')}}">Voir</a>
                  </div>
                </li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle {% if 'examens' in app.request.attributes.get('_route') %} active{% endif %}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Mes examens corrigés
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <a class="dropdown-item" href="{{ path('examens_list_correction')}}">Voir</a>
                    </div>
                  </li>




              {% endif %}
            {% endif %}
          </ul>

          <!-- Align Right -->
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                {% if app.user %}
                      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{app.user.username}}</a>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown2">
                        <a class="dropdown-item" href="{{ path('compte')}}">Mon compte</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('logout')}}">Se déconnecter</a>
                      </div>
                {% else %}
                      <a class="nav-link"href="{{ path('login')}}">Se connecter</a>
                {% endif %}
              </li>
            </ul>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
